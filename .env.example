# Django Configuration
# ====================
# REQUIRED: Generate a secret key using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated list for production)
# Example: ALLOWED_HOSTS=example.com,www.example.com
ALLOWED_HOSTS=

# Logging
DJANGO_LOG_LEVEL=INFO

# Google AI / Gemini Configuration
# =================================
# REQUIRED: Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Enable/disable Gemini features (True/False)
USE_GEMINI=True

# Gemini model to use (default: models/gemini-2.5-flash)
GEMINI_MODEL=models/gemini-2.5-flash

# Database Configuration
# ======================
# Set to True to use PostgreSQL, False for SQLite (development)
USE_POSTGRESQL=False

# PostgreSQL settings (only used if USE_POSTGRESQL=True)
DB_NAME=ai_resume_builder
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Celery / Redis Configuration
# =============================
# Redis connection URL for Celery broker and result backend
CELERY_BROKER_URL=redis://127.0.0.1:6379/0

# AWS S3 Configuration (Production)
# =================================
# Set to True to use AWS S3 for media storage
USE_S3=False

# AWS credentials (only needed if USE_S3=True)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Social Authentication (Optional)
# =================================
# Google OAuth2 credentials (for social login)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth credentials (for social login)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret